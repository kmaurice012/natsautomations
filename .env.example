# Database
DATABASE_URL="prisma+postgres://accelerate.prisma-data.net/?api_key=your-prisma-accelerate-api-key"
DIRECT_DATABASE_URL="postgres://user:password@your-database-host:5432/database?sslmode=require"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here-generate-with-openssl-rand-base64-32"

# Vercel Blob Storage (for image uploads)
# Get this from: Vercel Dashboard → Storage → Create Blob Store
BLOB_READ_WRITE_TOKEN="vercel_blob_rw_xxxxxxxxxx"

# Email Configuration (for contact form)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_FROM="noreply@natsautomations.co.ke"

# Live Chat (optional - can integrate Tawk.to, Intercom, etc.)
NEXT_PUBLIC_TAWK_PROPERTY_ID=""
NEXT_PUBLIC_TAWK_WIDGET_ID=""
